<form method="post" action="{{ path('calendrier_delete', {'id': calendrier.id}) }}" onsubmit="return confirm('Etes-vous sûr(e) de vouloir supprimer cet événement? Cette action est irréversible!');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ calendrier.id) }}">
    <button class="btn btn-danger ml-2 mt-2">Supprimer</button>
</form>
